html
	head
		title #{title}

		//- add title icon
		link(rel="shortcut icon" href="/image/fimo.ico")
		
		//- style CSS
		link(rel="stylesheet" type="text/css" href="/assets/style.css")
		
		//- Jquery
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
		

		
		//- momment.js --> format Date
		script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js")

		//- AJAX load node and data
		script(src="/assets/getKit.js")
		//- map
		script(src="/assets/map.js")
		//- draw chartJS
		script(src="/assets/drawChart.js")

		//- load chartJS
		script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js")

		style(type="text/css").
			canvas {
				-moz-user-select: none;
				-webkit-user-select: none;
				-ms-user-select: none;
			}
			.chartjs-tooltip {
				opacity: 1;
				position: absolute;
				background: rgba(0, 0, 0, .7);
				color: white;
				border-radius: 3px;
				-webkit-transition: all .1s ease;
				transition: all .1s ease;
				pointer-events: none;
				-webkit-transform: translate(-50%, 0);
				transform: translate(-50%, 0);
				padding: 4px;
			}
			.chartjs-tooltip-key {
				display: inline-block;
				width: 10px;
				height: 10px;
			}
